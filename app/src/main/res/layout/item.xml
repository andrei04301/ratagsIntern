<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/light_beige"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:autoSizeTextType="uniform"/>

            <TextView
                android:id="@+id/estName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Adoration Convent of Divine Mercy - Pink Sisters Convent"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:autoSizeTextType="uniform"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:autoSizeTextType="uniform"/>

            <TextView
                android:id="@+id/estAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="4XG7+H25, Tagaytay, Cavite"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/estId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/estSpot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>